{
  "protocol": "https://wired-protocol.org/v0/protocols/world-host.json",
  "published": true,
  "types": {
    "instance": {
      "schema": "https://wired-protocol.org/v0/schemas/instance.json",
      "dataFormat": ["application/json"]
    },
    "instance-info": {
      "schema": "https://wired-protocol.org/v0/schemas/instance-info.json",
      "dataFormat": ["application/json"]
    },
    "connect-url": {
      "dataFormat": ["application/json"]
    }
  },
  "structure": {
    "connect-url": {
      "$actions": [
        {
          "who": "anyone",
          "can": ["read"]
        },
        {
          "who": "recipient",
          "can": ["write"]
        }
      ]
    },
    "instance": {
      "$actions": [
        {
          "who": "anyone",
          "can": ["read", "write"]
        }
      ],
      "instance-info": {
        "$actions": [
          {
            "who": "anyone",
            "can": ["read"]
          },
          {
            "who": "recipient",
            "of": "instance",
            "can": ["write"]
          }
        ]
      }
    }
  }
}
