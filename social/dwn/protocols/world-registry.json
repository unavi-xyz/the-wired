{
  "protocol": "https://wired-protocol.org/v0/protocols/world-registry.json",
  "types": {
    "world": {
      "schema": "https://wired-protocol.org/v0/schemas/record-link.json",
      "dataFormat": ["application/json"]
    },
    "instance": {
      "schema": "https://wired-protocol.org/v0/schemas/instance.json",
      "dataFormat": ["application/json"]
    }
  },
  "structure": {
    "world": {
      "$actions": [
        {
          "who": "anyone",
          "can": "read"
        },
        {
          "who": "anyone",
          "can": "write"
        }
      ],
      "instance": {
        "$actions": [
          {
            "who": "recipient",
            "of": "world",
            "can": "write"
          }
        ]
      }
    }
  }
}
