{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Request WebSocket Message Schema",
  "description": "A schema for WebSocket messages sent from the client to host",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "description": "The type of the message"
    },
    "data": {
      "description": "The data associated with the message"
    }
  },
  "required": ["type", "data"],
  "oneOf": [
    {
      "properties": {
        "type": { "const": "join" },
        "data": { "$ref": "#/definitions/join_data" }
      }
    },
    {
      "properties": {
        "type": { "const": "leave" },
        "data": { "$ref": "#/definitions/leave_data" }
      }
    },
    {
      "properties": {
        "type": { "const": "send_chat_message" },
        "data": { "$ref": "#/definitions/send_chat_message_data" }
      }
    },
    {
      "properties": {
        "type": { "const": "set_avatar" },
        "data": { "$ref": "#/definitions/set_avatar_data" }
      }
    },
    {
      "properties": {
        "type": { "const": "set_name" },
        "data": { "$ref": "#/definitions/set_name_data" }
      }
    },
    {
      "properties": {
        "type": { "const": "set_grounded" },
        "data": { "$ref": "#/definitions/set_grounded_data" }
      }
    },
    {
      "properties": {
        "type": { "const": "set_grounded" },
        "data": { "$ref": "#/definitions/set_grounded_data" }
      }
    },
    {
      "properties": {
        "type": { "const": "pause_audio" },
        "data": { "$ref": "#/definitions/pause_audio_data" }
      }
    },
    {
      "properties": {
        "type": { "const": "webrtc_connect_transport" },
        "data": { "$ref": "#/definitions/webrtc_connect_transport_data" }
      }
    },
    {
      "properties": {
        "type": { "const": "webrtc_create_transport" },
        "data": { "$ref": "#/definitions/webrtc_create_transport_data" }
      }
    },
    {
      "properties": {
        "type": { "const": "webrtc_get_router_rtp_capabilities" },
        "data": { "type": "null" }
      }
    },
    {
      "properties": {
        "type": { "const": "webrtc_produce" },
        "data": { "$ref": "./webrtc.rtpParameters.schema.json" }
      }
    },
    {
      "properties": {
        "type": { "const": "webrtc_produce_data" },
        "data": { "$ref": "./webrtc.sctpStreamParameters.schema.json" }
      }
    },
    {
      "properties": {
        "type": { "const": "set_rtp_capabilities" },
        "data": { "$ref": "./webrtc.rtpCapabilities.schema.json" }
      }
    }
  ],
  "definitions": {
    "join_data": {
      "type": "string",
      "description": "The URI of the world to join"
    },
    "leave_data": {
      "type": "string",
      "description": "The URI of the world to leave"
    },
    "send_chat_message_data": {
      "type": "string",
      "description": "The message to send"
    },
    "set_avatar_data": {
      "type": ["string", "null"],
      "description": "The URI of the user's avatar"
    },
    "set_name_data": {
      "type": ["string", "null"],
      "description": "The name of the user"
    },
    "set_grounded_data": {
      "type": "boolean",
      "description": "Whether the user is grounded"
    },
    "pause_audio_data": {
      "type": "boolean",
      "description": "Whether the user's incoming audio is paused"
    },
    "webrtc_connect_transport_data": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "description": "The type of transport to connect",
          "enum": ["producer", "consumer"]
        },
        "dtlsParameters": { "$ref": "./webrtc.dtlsParameters.schema.json" }
      },
      "required": ["type", "dtlsParameters"]
    },
    "webrtc_create_transport_data": {
      "type": "string",
      "description": "The type of transport to create",
      "enum": ["producer", "consumer"]
    }
  }
}
