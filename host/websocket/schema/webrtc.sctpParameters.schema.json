{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WebRTC SCTP Parameters",
  "description": "Schema for WebRTC SCTP parameters",
  "type": "object",
  "properties": {
    "port": {
      "type": "integer",
      "minimum": 1,
      "maximum": 65535
    },
    "maxMessageSize": {
      "type": "integer",
      "minimum": 0
    },
    "maxRetransmits": {
      "type": "integer",
      "minimum": 0
    },
    "negotiated": {
      "type": "boolean"
    },
    "streamReset": {
      "type": "boolean"
    },
    "partialReliability": {
      "type": "object",
      "properties": {
        "allowed": {
          "type": "boolean"
        },
        "maxPacketLifeTime": {
          "type": "integer",
          "minimum": 0
        },
        "maxRetransmits": {
          "type": "integer",
          "minimum": 0
        }
      }
    }
  },
  "required": ["port"]
}
