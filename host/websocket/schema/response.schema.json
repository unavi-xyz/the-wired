{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Response WebSocket Message Schema",
  "description": "A schema for WebSocket messages sent from the host to client",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "description": "The type of the message"
    },
    "data": {
      "description": "The data associated with the message"
    }
  },
  "required": ["type", "data"],
  "oneOf": [
    {
      "properties": {
        "type": { "const": "join_success" },
        "data": { "$ref": "#/definitions/join_success_data" }
      }
    },
    {
      "properties": {
        "type": { "const": "chat_message" },
        "data": { "$ref": "#/definitions/chat_message_data" }
      }
    },
    {
      "properties": {
        "type": { "const": "player_avatar" },
        "data": { "$ref": "#/definitions/player_avatar_data" }
      }
    },
    {
      "properties": {
        "type": { "const": "player_grounded" },
        "data": { "$ref": "#/definitions/player_grounded_data" }
      }
    },
    {
      "properties": {
        "type": { "const": "player_join" },
        "data": { "$ref": "#/definitions/player_join_data" }
      }
    },
    {
      "properties": {
        "type": { "const": "player_leave" },
        "data": { "$ref": "#/definitions/player_leave_data" }
      }
    },
    {
      "properties": {
        "type": { "const": "player_name" },
        "data": { "$ref": "#/definitions/player_name_data" }
      }
    },
    {
      "properties": {
        "type": { "const": "webrtc_create_consumer" },
        "data": { "$ref": "#/definitions/webrtc_create_consumer_data" }
      }
    },
    {
      "properties": {
        "type": { "const": "webrtc_create_data_consumer" },
        "data": { "$ref": "#/definitions/webrtc_create_data_consumer_data" }
      }
    },
    {
      "properties": {
        "type": { "const": "webrtc_producer_id" },
        "data": { "$ref": "#/definitions/webrtc_producer_id_data" }
      }
    },
    {
      "properties": {
        "type": { "const": "webrtc_data_producer_id" },
        "data": { "$ref": "#/definitions/webrtc_data_producer_id_data" }
      }
    },
    {
      "properties": {
        "type": { "const": "webrtc_rtp_capabilities" },
        "data": { "$ref": "./webrtc.rtpCapabilities.schema.json" }
      }
    },
    {
      "properties": {
        "type": { "const": "webrtc_transport_created" },
        "data": { "$ref": "#/definitions/webrtc_transport_created_data" }
      }
    }
  ],
  "definitions": {
    "join_success_data": {
      "type": "number",
      "description": "The ID of the user"
    },
    "chat_message_data": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "description": "The ID of the player"
        },
        "message": {
          "type": "string",
          "description": "The message sent by the player"
        }
      },
      "required": ["id", "message"]
    },
    "player_avatar_data": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "description": "The ID of the player"
        },
        "avatar": {
          "type": "string",
          "description": "The URI the player's avatar"
        }
      },
      "required": ["id", "avatar"]
    },
    "player_grounded_data": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "description": "The ID of the player"
        },
        "grounded": {
          "type": "boolean",
          "description": "Whether the player is grounded"
        }
      },
      "required": ["id", "grounded"]
    },
    "player_join_data": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "description": "The ID of the player"
        },
        "name": {
          "type": "string",
          "description": "The name of the player"
        },
        "avatar": {
          "type": "string",
          "description": "The URI the player's avatar"
        }
      },
      "required": ["id", "name", "avatar"]
    },
    "player_leave_data": {
      "type": "number",
      "description": "The ID of the player"
    },
    "player_name_data": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "description": "The ID of the player"
        },
        "name": {
          "type": "string",
          "description": "The name of the player"
        }
      },
      "required": ["id", "name"]
    },
    "webrtc_create_consumer_data": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "description": "The ID of the player"
        },
        "consumerId": {
          "type": "string",
          "description": "The ID of the consumer"
        },
        "producerId": {
          "type": "string",
          "description": "The ID of the producer"
        },
        "kind": {
          "type": "string",
          "description": "The kind of the consumer"
        },
        "rtpParameters": {
          "$ref": "./webrtc.rtpParameters.schema.json"
        }
      },
      "required": ["id", "consumerId", "producerId", "kind", "rtpParameters"]
    },
    "webrtc_create_data_consumer_data": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "description": "The ID of the player"
        },
        "dataConsumerId": {
          "type": "string",
          "description": "The ID of the data consumer"
        },
        "dataProducerId": {
          "type": "string",
          "description": "The ID of the data producer"
        },
        "sctpStreamParameters": {
          "$ref": "./webrtc.sctpStreamParameters.schema.json"
        }
      },
      "required": [
        "id",
        "dataConsumerId",
        "dataProducerId",
        "sctpStreamParameters"
      ]
    },
    "webrtc_producer_id_data": {
      "type": "string"
    },
    "webrtc_data_producer_id_data": {
      "type": "string"
    },
    "webrtc_transport_created_data": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "description": "The type of the transport",
          "enum": ["producer", "consumer"]
        },
        "options": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "description": "The ID of the transport"
            },
            "iceParameters": {
              "type": "object",
              "properties": {
                "usernameFragment": {
                  "type": "string",
                  "description": "The ICE username fragment"
                },
                "password": {
                  "type": "string",
                  "description": "The ICE password"
                }
              },
              "required": ["usernameFragment", "password"]
            },
            "iceCandidates": {
              "type": "array",
              "items": {
                "$ref": "./webrtc.iceCandidate.schema.json"
              }
            },
            "dtlsParameters": {
              "$ref": "./webrtc.dtlsParameters.schema.json"
            },
            "sctpParameters": {
              "type": "object",
              "properties": {
                "port": {
                  "type": "number",
                  "description": "The SCTP port"
                },
                "OS": {
                  "type": "number",
                  "description": "The SCTP OS"
                },
                "MIS": {
                  "type": "number",
                  "description": "The SCTP MIS"
                },
                "maxMessageSize": {
                  "type": "number",
                  "description": "The SCTP max message size"
                }
              },
              "required": ["port", "OS", "MIS", "maxMessageSize"]
            },
            "iceServers": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "urls": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "username": {
                    "type": "string"
                  },
                  "credential": {
                    "type": "string"
                  }
                }
              }
            },
            "iceTransportPolicy": {
              "type": "string",
              "description": "The ICE transport policy",
              "enum": ["all", "relay"]
            },
            "proprietaryConstraints": {
              "type": "object"
            },
            "additionalSettings": {
              "type": "object"
            },
            "appData": {
              "type": "object"
            }
          },
          "required": ["id", "iceParameters", "iceCandidates", "dtlsParameters"]
        }
      },
      "required": ["type", "options"]
    }
  }
}
