{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WebRTC RTP Parameters",
  "description": "Schema for WebRTC RTP parameters",
  "type": "object",
  "properties": {
    "codecs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "mimeType": {
            "type": "string"
          },
          "payloadType": {
            "type": "integer",
            "minimum": 0,
            "maximum": 127
          },
          "clockRate": {
            "type": "integer",
            "minimum": 8000,
            "maximum": 96000
          },
          "channels": {
            "type": "integer",
            "minimum": 1,
            "maximum": 2
          },
          "parameters": {
            "type": "object"
          }
        },
        "required": ["mimeType", "payloadType", "clockRate"]
      }
    },
    "headerExtensions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "uri": {
            "type": "string"
          },
          "id": {
            "type": "integer",
            "minimum": 1,
            "maximum": 255
          }
        },
        "required": ["uri", "id"]
      }
    }
  },
  "required": ["codecs", "headerExtensions"]
}
