{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "../../schema/message.schema.json",
  "title": "Response WebSocket Message Schema",
  "description": "A schema for WebSocket messages sent from the server to client",
  "oneOf": [
    {
      "properties": {
        "type": { "const": "xyz.unavi.webrtc.consumer.create" },
        "data": { "$ref": "#/definitions/xyz.unavi.webrtc.consumer.create" }
      }
    },
    {
      "properties": {
        "type": { "const": "xyz.unavi.webrtc.dataConsumer.create" },
        "data": { "$ref": "#/definitions/xyz.unavi.webrtc.dataConsumer.create" }
      }
    },
    {
      "properties": {
        "type": { "const": "xyz.unavi.webrtc.producer.id" },
        "data": { "type": "string" }
      }
    },
    {
      "properties": {
        "type": { "const": "xyz.unavi.webrtc.dataProducer.id" },
        "data": { "type": "string" }
      }
    },
    {
      "properties": {
        "type": { "const": "xyz.unavi.webrtc.router.rtpCapabilities" },
        "data": { "$ref": "./webrtc.rtpCapabilities.schema.json" }
      }
    },
    {
      "properties": {
        "type": { "const": "xyz.unavi.webrtc.transport.created" },
        "data": { "$ref": "#/definitions/xyz.unavi.webrtc.transport.created" }
      }
    }
  ],
  "definitions": {
    "xyz.unavi.webrtc.consumer.create": {
      "type": "object",
      "properties": {
        "playerId": { "type": "number" },
        "consumerId": { "type": "string" },
        "producerId": { "type": "string" },
        "rtpParameters": { "$ref": "./webrtc.rtpParameters.schema.json" }
      },
      "required": ["id", "consumerId", "producerId", "rtpParameters"]
    },
    "xyz.unavi.webrtc.dataConsumer.create": {
      "type": "object",
      "properties": {
        "playerId": { "type": "number" },
        "dataConsumerId": { "type": "string" },
        "dataProducerId": { "type": "string" },
        "sctpStreamParameters": {
          "$ref": "./webrtc.sctpStreamParameters.schema.json"
        }
      },
      "required": [
        "id",
        "dataConsumerId",
        "dataProducerId",
        "sctpStreamParameters"
      ]
    },
    "xyz.unavi.webrtc.transport.created": {
      "type": "object",
      "properties": {
        "type": { "type": "string", "enum": ["producer", "consumer"] },
        "options": {
          "type": "object",
          "properties": {
            "id": { "type": "string" },
            "iceParameters": {
              "type": "object",
              "properties": {
                "usernameFragment": { "type": "string" },
                "password": { "type": "string" },
                "iceLite": { "type": "boolean" }
              },
              "required": ["usernameFragment", "password"]
            },
            "iceCandidates": {
              "type": "array",
              "items": { "$ref": "./webrtc.iceCandidate.schema.json" }
            },
            "dtlsParameters": { "$ref": "./webrtc.dtlsParameters.schema.json" },
            "sctpParameters": {
              "type": "object",
              "properties": {
                "port": {
                  "description": "The SCTP port",
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 65535
                },
                "OS": {
                  "description": "The SCTP OS",
                  "type": "integer",
                  "minimum": 0
                },
                "MIS": {
                  "description": "The SCTP MIS",
                  "type": "integer",
                  "minimum": 0
                },
                "maxMessageSize": {
                  "description": "The SCTP max message size",
                  "type": "integer",
                  "minimum": 0
                }
              },
              "required": ["port", "OS", "MIS", "maxMessageSize"]
            },
            "iceServers": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "urls": { "type": "array", "items": { "type": "string" } },
                  "username": { "type": "string" },
                  "credential": { "type": "string" }
                }
              }
            },
            "iceTransportPolicy": {
              "type": "string",
              "description": "The ICE transport policy",
              "enum": ["all", "relay"]
            },
            "proprietaryConstraints": { "type": "object" },
            "additionalSettings": { "type": "object" },
            "appData": { "type": "object" }
          },
          "required": ["id", "iceParameters", "iceCandidates", "dtlsParameters"]
        }
      },
      "required": ["type", "options"]
    }
  }
}
