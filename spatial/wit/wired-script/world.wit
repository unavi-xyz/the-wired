package wired:script;

world script {
  export types;
}

interface types {
  use wired:ecs/types.{ecs-world};

  resource script {}

  /// Called once to initialize the script.
  init: func(ecs-world: borrow<ecs-world>) -> script;

  /// Called every tick.
  update: func(ecs-world: borrow<ecs-world>, script: borrow<script>);
}
